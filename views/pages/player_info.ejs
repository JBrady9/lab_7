<% include ../partials/header %>
<% include ../partials/menu %>
	<div class="container">
		<br>
		<div class="row">
			<div class="col-4">
				<div class="card">
				<!-- TODO: Modify the ejs code below, to conditionally set the image_src to be from our chosen player -->
				<% 
				var image_src = ''
				if(players){
					  image_src = '../resources/img/player' + players[3].id + '.jpg';
				}else{
					  image_src = '../resources/img/helmet.jpg';
				%>
				<% } %>
				 <img class="card-img-top" id="player_img" src= "<%- image_src %>" alt="Image of Football Player">
				  <div class="card-body mx-auto">
					<form class="form"action="/player_info/post" method="get">
						<select class="custom-select" name="player_choice" onchange="this.form.submit()">
							 <option selected>Select Player</option>
							 if (data) {
								var player = '';
								data.forEach(function(item) {
									player +='<option value = "' + item.id +'">' +item.name+'</option>';
								});%>
								<%- player %>
								<%}%>
						</select>
					</form>
				  </div>
				</div>
			</div>
			<div class="col-8">
				<div class="table-responsive">
					<table class="table">
						<tr>
							<%
							if (players[0]){
								var year = players[0].year;
								var major = players[0].major;
								var gp = players[0].totalGames;
								var pass_yard = players[0].passing_yards;
								var avg_pass = players[0].passing_yards / players[0].totalGames;
								var rush_yard = players[0].rushing_yards;
								var avg_rush = players[0].rushing_yards / players[0].totalGames;
								var rec_yard = players[0].receiving_yards;
								var avg_rec = players[0].receiving_yards / players[0].totalGames;
							<% } %>
							<th>Year</th>
							<td><%- year %>	</td>
						</tr>
						<tr>
							<th>Major</th>
							<td><%- major %>	</td>
						</tr>
						<tr>
							<th>Games Played</th>
							<td><%- gp %>	</td>
						</tr>
						<tr>
							<td>Passing Yards: <%- pass_yard %> </td>
							<td>Avg. Passing Yards: <%- avg_pass %> </td>
						</tr>
						<tr>
							<td>Rushing Yards: <%- rush_yard %></td>
							<td>Avg. Rushing Yards:<%- avg_rush %> </td>
						</tr>
						<tr>
							<td>Receiving Yards:<%- rec_yard %> </td>
							<td>Avg. Receiving Yards: <%- avg_rec %></td>
						</tr>
					</table>
				</div>
			</div>
		</div>
	</div>
  
<% include ../partials/footer %>